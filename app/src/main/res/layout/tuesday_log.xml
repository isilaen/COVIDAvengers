<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/tuesdayTask1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:background="@drawable/rounded_menu"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tuesdayDoctor1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/blue_circle" />

        <LinearLayout
            android:id="@+id/tuesdayMessageDetails1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tuesdaySender1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/fonts"
                android:text="From Doctor Mabuse"
                android:textColor="@color/colorPrimaryDark"
                android:textFontWeight="700"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tuesdayMessage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts"
                android:text="Practice mindfulness."
                android:textColor="@color/colorPrimaryDark"
                android:textFontWeight="400"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/tuesdayTask2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:background="@drawable/rounded_menu"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tuesdayDoctor2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/blue_circle" />

        <LinearLayout
            android:id="@+id/tuesdayMessageDetails2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tuesdaySender2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/fonts"
                android:text="From Doctor Mabuse"
                android:textColor="@color/colorPrimaryDark"
                android:textFontWeight="700"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tuesdayMessage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts"
                android:text="Take a walk in the morning."
                android:textColor="@color/colorPrimaryDark"
                android:textFontWeight="400"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tuesdayTask3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:background="@drawable/rounded_menu"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tuesdayDoctor3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/blue_circle" />

        <LinearLayout
            android:id="@+id/tuesdayMessageDetails3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tuesdaySender3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/fonts"
                android:text="From Doctor Hyde"
                android:textColor="@color/colorPrimaryDark"
                android:textFontWeight="700"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tuesdayMessage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts"
                android:text="Remember to eat a serve of veggies!"
                android:textColor="@color/colorPrimaryDark"
                android:textFontWeight="400"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>


</merge>